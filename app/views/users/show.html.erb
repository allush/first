<%= link_to 'Back', users_path %>|
<%= link_to 'Edit', edit_user_path(@user) %>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<h2>Add photo</h2>
<%= form_for [@user, @user.photos.build] do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :pos %><br>
      <%= f.text_area :pos %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>