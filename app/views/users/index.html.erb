<h1>Users</h1>

<%= link_to 'New user', new_user_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user_path(user) %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Delete', users_path(user),
                        method: :delete,
                        data: {confirm: 'Вы уверены'} %></td>
      </tr>
  <% end %>
</table>